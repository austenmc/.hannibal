#/bin/bash -e

echo -n "Creating ~/.vimc ... "
ln -s ~/.patton/.vimrc ~/.vimrc
echo "done"

echo -n "Creating ~/.aliases ... "
ln -s ~/.patton/.aliases ~/.aliases
echo "done"

eho -n "Linking .bashrc ... "
echo "source ~/.hannibal/.bashrc" >> ~/.bashrc
echo "done"

eho -n "Linking .bash_profile ... "
echo "source ~/.hannibal/.bashrc" >> ~/.bashrc
echo "done"
